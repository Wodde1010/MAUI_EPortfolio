<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Example1.Calc"
             BackgroundColor="White">

    <StackLayout Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
       
       <Editor x:Name="num1" Text="first number" />
       <Editor x:Name="num2" Text="second number" />
       
       <Label x:Name="result" Text="result" 
       FontSize="18"
       HorizontalOptions="Center"
       TextColor="Red"
       />
       <Button 
       Clicked="add"
       Text="add both numbers"
       HorizontalOptions="Center"
       />
    </StackLayout>

</ContentPage>